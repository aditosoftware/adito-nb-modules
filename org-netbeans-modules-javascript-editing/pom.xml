  <build>
    <plugins>
      <!-- NetBeans module plugin. Muss explizit für packaging 'nbm' angegeben werden. -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>nbm-maven-plugin</artifactId>
        <configuration>
          <publicPackages>
            <publicPackage>org.netbeans.modules.javascript.editing.*</publicPackage>
            <publicPackage>org.netbeans.modules.javascript.editing.adito.*</publicPackage>
            <publicPackage>org.netbeans.modules.javascript.editing.embedding.*</publicPackage>
            <publicPackage>org.netbeans.modules.javascript.editing.lexer.*</publicPackage>
            <publicPackage>org.netbeans.modules.javascript.editing.spi.*</publicPackage>
          </publicPackages>
          <codeNameBase>org.netbeans.modules.javascript.editing</codeNameBase>

          <moduleDependencies>
            <dependency>
              <id>org.netbeans.modules:org-netbeans-modules-html-editor-lib</id>
              <type>impl</type>
              <explicitValue>org.netbeans.modules.html.editor.lib/3 = 201510222201</explicitValue>
            </dependency>
          </moduleDependencies>

        </configuration>
      </plugin>
    </plugins>
  </build>


  <profiles>
    <profile>
      <id>adito.maven.resources</id>
      <build>
        <plugins>
          <!-- Kopiert die JsStubs. Wird nur im 'Resources'-Profil ausgeführt. -->
          <plugin>
            <groupId>com.github.goldin</groupId>
            <artifactId>copy-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>create-archive</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <resources>
                    <!-- ~~~~ -->
                    <!-- Copy -->
                    <!-- ~~~~ -->
                    <resource>
                      <directory>${project.parent.parent.parent.basedir}/library/server/target/generated-sources/annotations/jsStubs</directory>
                      <include>stub_adito_*.js</include>
                      <targetPath>${project.build.directory}/nbm/netbeans/aditoonline/jsstubs</targetPath>
                    </resource>
                    <resource>
                      <directory>${project.parent.parent.parent.basedir}/library/server/target/classes/de/adito/aditoweb/server/application/jdito/jscript</directory>
                      <include>stub_adito_*.js</include>
                      <targetPath>${project.build.directory}/nbm/netbeans/aditoonline/jsstubs</targetPath>
                    </resource>
                    <resource>
                      <directory>${project.basedir}/src/main/nbm/jsstubs</directory>
                      <targetPath>${project.build.directory}/nbm/netbeans/aditoonline/jsstubs</targetPath>
                    </resource>
                    <!-- ~~~~ -->
                    <!-- Pack -->
                    <!-- ~~~~ -->
                    <resource>
                      <directory>${project.build.directory}/nbm/netbeans/aditoonline/jsstubs</directory>
                      <targetPath>${project.build.directory}/nbm/netbeans/aditoonline/jsstubs/allstubs.zip</targetPath>
                      <pack>true</pack>
                    </resource>
                    <!-- ~~~~~ -->
                    <!-- Clean -->
                    <!-- ~~~~~ -->
                    <resource>
                      <directory>${project.build.directory}/nbm/netbeans/aditoonline/jsstubs</directory>
                      <exclude>allstubs.zip</exclude>
                      <clean>true</clean>
                    </resource>
                  </resources>
                </configuration>
              </execution>
            </executions>
            <dependencies>
              <!-- ist Abhängig vom Server, weil dort erst die JsStubs beim Kompilieren vom Annotation-Prozessor erzeugt
              werden müssen. -->
              <dependency>
                <groupId>de.adito.aditoweb</groupId>
                <artifactId>server</artifactId>
                <version>${project.parent.version}</version>
                <exclusions>
                  <!-- 'copy-maven-plugin' benötigt eine andere guava Version. -->
                  <exclusion>
                    <groupId>com.google.guava</groupId>
                    <artifactId>guava</artifactId>
                  </exclusion>
                </exclusions>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
